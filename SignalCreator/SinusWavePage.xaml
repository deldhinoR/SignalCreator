<Page x:Class="SignalCreator.SinusWavePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:SignalCreator"
      mc:Ignorable="d"
      Title="Sinus Wave Page"
      Background="LightGray">

    <Grid>
        <Border Width="350" Padding="20" CornerRadius="10" Background ="White" BorderBrush="Black" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Sinus Wave Generator" FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"
                           FontFamily="Bahnschrift"/>

                <!-- Amplitude Input -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Width="120" VerticalAlignment="Center" FontFamily="Bahnschrift">Amplitude (V):</Label>
                    <TextBox Name="AmplitudeBox" Width="150" Text="2.0"
                             FontFamily="Bahnschrift"/>
                </StackPanel>

                <!-- Frequency Input -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Width="120" VerticalAlignment="Center" FontFamily="Bahnschrift">Frequency (Hz):</Label>
                    <TextBox Name="FrequencyBox" Width="150" Text="10"
                             FontFamily="Bahnschrift"/>
                </StackPanel>

                <!-- Send Button -->
                <Button Content="Send" Width="100" Height="30" Margin="0,20,0,0" HorizontalAlignment="Center"
                        Click="Send_Click" Background="DarkGray" BorderBrush="Black" 
                        FontFamily="Agency FB" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
